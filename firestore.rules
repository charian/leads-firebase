rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {
    
    // --- Helper Functions ---
    function getRoles() {
      return get(/databases/$(db)/documents/_config/admins).data.roles;
    }

    function getEmail() {
      return request.auth.token.email;
    }

    function getMyRole() {
      return getRoles()[getEmail()];
    }

    // --- Rules for Leads Collection ---
    match /leads/{leadId} {
      allow create: if request.resource.data.keys().hasAll(['name', 'phone_e164', 'createdAt']);
      allow read, delete: if getMyRole() in ['super-admin', 'admin', 'user'];
      allow update: if getMyRole() in ['super-admin', 'admin', 'user'];
    }

    // --- Rules for Config Collection ---
    match /_config/admins {
      // ✨ 수정: "닭이 먼저냐 달걀이 먼저냐" 문제를 해결하기 위해,
      // 로그인한 모든 사용자가 자신의 등급을 확인할 수 있도록 읽기 권한을 허용합니다.
      allow read: if request.auth != null;
      
      // ✨ 수정: get() 함수 대신 기존 데이터(resource)를 직접 확인하여 순환 참조를 방지합니다.
      allow update: if resource.data.roles[getEmail()] == 'super-admin';
      
      allow create, delete: if false;
    }

    // --- Rules for Mail Collection ---
    match /mail/{docId} {
        allow create: if true;
        allow read, update, delete: if false;
    }
  }
}

